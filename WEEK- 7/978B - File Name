#include<bits/stdc++.h>
using namespace std;

int main() 
{
    int charNum;
    int delForbid=0;
    string strs;
    cin>>charNum;
    cin>>strs;
    for (int i=0; i<charNum; i++) {
        if (strs[i]=='x' && strs[i+1]=='x' && strs[i+2]=='x') 
	{
            delForbid++;
        }
    }
    cout<<delForbid<<endl;

    return 0;
}
